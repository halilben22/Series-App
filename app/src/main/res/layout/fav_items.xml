<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <androidx.cardview.widget.CardView
        style="@style/FavCardBackgroundColor"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:minWidth="400dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >

            <androidx.cardview.widget.CardView
                style="@style/ImageBackgroundColor"
                android:layout_width="80dp"
                android:layout_height="127dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="7dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/posterFav"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="TODO" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/layout_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="105dp"
                android:layout_marginTop="7dp"


                android:orientation="vertical">


                <TextView
                    android:id="@+id/detail_title"
                    style="@style/TextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/detail_start"
                    style="@style/TextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="4dp"
                    android:text="Start date:"

                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/detail_country"
                    style="@style/TextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="1dp"
                    android:layout_marginEnd="4dp"
                    android:text="Country:"
                    android:textSize="12dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/detail_status"
                    style="@style/TextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="1dp"
                    android:layout_marginEnd="4dp"
                    android:text="Status:"
                    android:textSize="12dp"
                    android:textStyle="italic" />

                <LinearLayout
                    android:id="@+id/add_comment"
                    style="@style/CommentCardBackgroundColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/focus_color"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:minHeight="27dp"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/CommentCardTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"


                        android:text="your comment"
                        android:textSize="12sp">

                    </TextView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_keyboard_arrow_right_24" />


                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/heart_button"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentEnd="true"

                android:layout_marginStart="262dp"
                android:layout_marginEnd="3dp"

                android:layout_marginBottom="-26dp"
                android:clickable="true"
                android:src="@drawable/fav_red" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>